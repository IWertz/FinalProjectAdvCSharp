@model Game
@{
    ViewBag.Title = "Delete Game";
}

<h2>Delete Game?</h2>
<p style="color:red;">Are you sure you want to delete this game?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GameId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Game" asp-action="View" asp-route-id="@Model.GameId" class="btn btn-primary">Cancel</a>
</form>